#!/usr/bin/env false

if test -z "${__rc}"; then
	__rc='unknown'
fi

if test -z "${__rc_common_init}"; then
	__rc_common_init='1'

	if test -d "${HOME}/.config/sh-lib"; then
	   for __cmd in "${HOME}/.config/sh-lib"/*; do
		   . "${__cmd}"
	   done
	fi

	if test -d "${HOME}/.config/sh-common"; then
		for __cmd in "${HOME}/.config/sh-common"/*; do
			. "${__cmd}"
		done
	fi
fi

if test -d "${HOME}/.config/sh-interactive"; then
	for __cmd in "${HOME}/.config/sh-interactive"/*; do
		. "${__cmd}"
	done
fi

## interactive specific configuration follows

CLICOLOR='1'; export CLICOLOR
EDITOR='emacs -nw'; export EDITOR
LSCOLORS='ExFxCxDxBxegedabagacad'; export LSCOLORS
VISUAL='emacs -nw'; export VISUAL

__attr_red="$(tput setaf 1)"
__attr_reset="$(tput sgr0)$(tput cnorm)"

__ps1_err() {
	# shellcheck disable=SC2181
	if test "$?" -ne 0; then
		printf '%s' "${__attr_red}"
	fi
}

case "${TERM}" in
	eterm*)
		PS1="\$(eval \"\${PROMPT_COMMAND}\")${__attr_reset}\w \$(__ps1_err)\$${__attr_reset} " ;;
	*)
		PS1="\$(eval \"\${PROMPT_COMMAND}\")${__attr_reset}\$(__ps1_err)\$${__attr_reset} "
esac
